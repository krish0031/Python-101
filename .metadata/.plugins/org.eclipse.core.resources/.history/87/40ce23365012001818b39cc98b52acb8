import socket 
import time
host = 'data.pr4e.org'
port =80
s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.connect((host,port))
s.sendall(b'GET http://data.pr4e.org/cover.jpg Http/1.0\n\n')
count = 0
pic = b""

while True:
    data = s.recv(5120)
    if (len(data)<1): break
    time.sleep(0.25)
    count = count +len(data)
    print(len(data),count)
    pic = pic +data
s.close()

print(pic)